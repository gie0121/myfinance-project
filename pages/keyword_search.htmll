<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>üîç Search Records</title>
  <style>
    body {
      font-family: sans-serif;
      background: #f9f9ff;
      padding: 20px;
      text-align: center;
    }
    table {
      margin: 20px auto;
      border-collapse: collapse;
      width: 80%;
    }
    th, td {
      border: 1px solid #ccc;
      padding: 8px;
    }
    input {
      padding: 8px;
      margin: 10px;
      width: 200px;
    }
    button {
      padding: 8px 16px;
    }
  </style>
</head>
<body>
  <h1>üîç Search Records by Category</h1>
  <input type="text" id="categoryInput" placeholder="Enter category (e.g. Food)">
  <button onclick="search()">Search</button>

  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Category</th>
        <th>Amount</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody id="resultBody"></tbody>
  </table>

  <script>
    function search() {
      const category = document.getElementById("categoryInput").value.trim().toLowerCase();
      const currentUser = localStorage.getItem("currentUser");
      const storageKey = `records_${currentUser}`;
      const records = JSON.parse(localStorage.getItem(storageKey) || "[]");

      const resultBody = document.getElementById("resultBody");
      resultBody.innerHTML = "";

      const matched = records.filter(r => r.category.toLowerCase() === category);
      matched.forEach(({ date, category, amount, note }) => {
        resultBody.innerHTML += `
          <tr>
            <td>${date}</td>
            <td>${category}</td>
            <td>${amount}</td>
            <td>${note}</td>
          </tr>`;
      });

      if (matched.length === 0) {
        resultBody.innerHTML = `<tr><td colspan="4">No records found.</td></tr>`;
      }
    }
  </script>
</body>
</html>
